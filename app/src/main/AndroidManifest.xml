<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.hitesh0505.languagelove">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <!-- intent is a message that requests some type of action to be performed by other apps or activities
                 inturn other apps/activites specify intent filters to tell that they can perform action.
                 e.g. the LAUNCHER will start the app on the main screen-->
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <!-- label shows us the activity name on top-->
        <activity android:name=".NumbersActivity"
                  android:label="Numbers Activity">
        </activity>
        <activity android:name=".FamilyActivity"
                  android:label="Family Activity">
        </activity>
        <activity android:name=".ColorsActivity"
        android:label="Colors Activity ">
        </activity>
        <activity android:name=".PhrasesActivity"
        android:label="Phrases Activity">
        </activity>
    </application>

</manifest>